<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selForAdmin">


    <TextView
        android:id="@+id/selAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址："
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintVertical_bias="0.05"/>

    <EditText
        android:id="@+id/inputAdd"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:hint="adress"
        android:textSize="20sp"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/selAdd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintVertical_bias="0.040"/>

    <Button
        android:id="@+id/selOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/selAdd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintVertical_bias="0.040"/>

    <TextView
        android:id="@+id/a_number"
        android:textSize="20sp"
        android:text="序号"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/inputAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"/>

    <TextView
        android:id="@+id/a_time"
        android:textSize="20sp"
        android:text="时间"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        app:layout_constraintTop_toBottomOf="@id/inputAdd"
        app:layout_constraintStart_toEndOf="@+id/a_number"/>

    <TextView
        android:id="@+id/a_school"
        android:textSize="20sp"
        android:text="学校"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        app:layout_constraintTop_toBottomOf="@id/inputAdd"
        app:layout_constraintStart_toEndOf="@+id/a_time"/>

    <TextView
        android:id="@+id/a_confirmname"
        android:textSize="20sp"
        android:text="证明人"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        app:layout_constraintTop_toBottomOf="@id/inputAdd"
        app:layout_constraintStart_toEndOf="@+id/a_school" />

    <ListView
        android:id="@+id/selResforAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/a_number"></ListView>

</android.support.constraint.ConstraintLayout>